                        <div class="card-body">
                            <div class="table-responsive" id="reload">
                                <table class="table table-hover" id="customerTable">
                                    <thead class="bg-dark text-white bg-opacity-50">
                                        <tr class="text-center">
                                            <th>sI</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Subtotal</th>
                                            <th scope="col">Status</th>
                                            <th scope="col">Date</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                        <% console.log('singleOrder front',singleOrder) %>
                                    </thead>
                                    <tbody>
                                        <% if(singleOrder && singleOrder.products && singleOrder.products.length>0){%>
                                            <% singleOrder.products.forEach((order,i)=>{%>
                                                <% console.log('order product front',i,order) %>
<%let subtotal=order.quantity*order.productId.offerPrice%>
<% console.log('subtotal front',subtotal) %>

                                                <tr class="text-center">
                                                    <td>
                                                        <%=i+1%>
                                                    </td>
                                                    <td>
                                                        <img style="width: 50px; height: 50px;" src="/user/assets/images/product-images/sharpedImages/<%=order.productId.images[0]%>" alt="image">
                                                    </td>
                                                    <td>
                                                        <%=order.productId.name%>
                                                    </td>
                                                    <td>
                                                        <%=order.productId.offerPrice%>
                                                    </td>
                                                    <td>
                                                        <%=order.quantity%>
                                                    </td>
                                                    <td>
                                                        <%=subtotal%>
                                                    </td>
                                                        <td>
                                                            <span class="btn btn-sm bg-danger text-white" >
                                                                <%=order.status%>
                                                            </span>
                                                           
                                                        </td>
                                                        <% let formattedDate = singleOrder.date.toDateString()%>
                                                        <td>
                                                            <%=formattedDate%>
                                                        </td>

                                                                    <td >
                                                                        <div class="col-md-2 col-6 w-100 btn btn-sm text-center">
                                                                            
                                                                            <select class="form-select order-single-status" style="font-size: 14px;"
                                                                            data-orderId="<%singleOrder._id%>" 
                                                                            data-productId="<%=order.productId._id%>"
                                                                            data-userId="<%=singleOrder.user._id%>"
                                                                            data-index = <%=i%>
                                                                            id="order-status"
                                                                            name="orderStatus"
                                                                            >

                                                                                <option selected>Change Status</option>
                                                                                <option value="shipped" >Shipped</option>
                                                                                <option value="Out of delivery">Out of delivery</option>
                                                                                <option value="Delivered">Deleverd</option>
                                                                                <option value="Cancelled" >Cancel</option>
                                                                            </select>
                                                                        </div>
                                                                    </td>
                                                </tr>
                                                <% })%>
                                                    <%}else{%>
                                                        <tr>
                                                            <td colspan="8" class="text-center">No order Found !</td>
                                                        </tr>
                                                        <%}%>
                                    </tbody>
                                </table>
                            </div>
                            <!-- table-responsive //end -->
                        </div>
                        <!-- card-body end// -->
                    </div>
                    <!-- card end// -->
                 
                </section>
                <!-- content-main end// -->

