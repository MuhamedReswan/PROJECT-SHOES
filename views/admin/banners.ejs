<%- include('../layout/admin/adminHeader.ejs') -%>

    <%- include('../partials/adminSideNav.ejs') -%>
        <main class="main-wrap">
            <%- include('../partials/adminHeaderBody') -%>

                <section class="content-main">
                    <div class="content-header ">
                        <div>
                            <h2 class="content-title card-title g ">Banners</h2>

                        </div>
                        <div>
                            <a href="/admin/banners/add-banner" class="btn btn-dark btn-sm rounded">Add Banner</a>
                        </div>
                    </div>



                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="bg-dark text-white bg-opacity-50">
                                    <tr>
                                        <th class="text-center">sI</th>
                                        <th scope="col" class="text-center">Image</th>
                                        <th scope="col" class="text-center">Title</th>
                                        <th scope="col" class="text-center">Dscription</th>
                                        <th scope="col" class="text-center">Expire Date</th>
                                        <th scope="col" class="text-center">url</th>
                                        <th scope="col" class="text-center ">Status</th>

                                        <th scope="col" colspan="2" class="text-center ">action</th>

                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    <%if(banners.length !=0){%>
                                        <%banners.forEach((banner,i)=>{%>
                                            <%console.log("banners form ejs",banner)//------------------------%>

                                            <tr>
                                             <td><%=i+1%></td>
                                             <td><img style="width: 100px; width: 100px;" src="/user/assets/images/banners/<%= banner.image %>" alt="banner image"></td>
                                             <td><%=banner.title%></td>
                                             <td><%=banner.description%></td>
                                             <td><%=banner.expireDate ? banner.expireDate.toDateString() :"Date"%></td>
                                             <td><%=banner.url%></td>
                                             <td>
                                                <button id="status-button"
                                                    class="btn text-center btn-sm btn-dark btn-disabled">
                                                    <%= banner.isListed==true ? 'Listed' : 'Unlisted' %>
                                                </button>
                                            </td>                                             <td>
                                                <a href="/admin/edit-banner/<%= banner._id%>" class="btn btn-sm  rounded font-sm text-center btn-outline-dark"><span> Edit </span> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="blue" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                                  </svg></a>
                                              </td>
                                              <% if (banner.isListed){%>
                                                <td>
                                                    <div class="btn btn-sm btn-danger rounded font-sm text-center list-unlist" banner-id="<%= banner._id %>" data-initial-status="<%= banner.isListed %>" onclick="listAndUnlist('<%= banner._id%>')">Un list</div>
                                                </td>
                                                <%}else{%>
                                                    <td>
                                                        <div class="btn btn-sm btn-dark rounded font-sm text-center list-unlist" banner-id="<%= banner._id %>" data-initial-status="<%= banner.isListed %>" onclick="listAndUnlist('<%= banner._id%>')">List</div>
                                                    </td>
                                                    <%}%>
                                            </tr>
                                            <%})%>
                                      
           <%}else{%>
            <tr>
                <td colspan="8"> 
                    <h4>No available Banner</h4>
                </td>
            </tr>
           <%}%>
                                </tbody>

                            </table>
                        </div>
                        <!-- table-responsive //end -->
                    </div>

                </section>
                <!-- content-main end// -->
                <footer class="main-footer font-xs">
                    <div class="row pb-30 pt-15">
                        <div class="col-sm-6">
                            <script>
                                document.write(new Date().getFullYear());
                            </script>
                            &copy; Nest - HTML Ecommerce Template .
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end">All rights reserved</div>
                        </div>
                    </div>
                </footer>
        </main>

