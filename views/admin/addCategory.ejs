<%- include('../layout/adminHeader.ejs') -%>
  <%- include('../layout/adminSideNav.ejs') -%>


    <div class="container">
      <section class="d-flex justify-content-center align-items-center p-4">
        <div class="col col-md-8 col-lg-6 col-xxl-5">
          <div class="shadow-xl p-4 p-lg-5 bg-white">
            <h1 class="text-center fw-bold mb-5 fs-2">Add Category</h1>

            <!-- Your category addition form here -->
            <form action="/admin/add-category" method="post" onsubmit="return validateCategory()">
              
              <% if (messages.nameExist) { %>
                <div class="alert alert-danger d-flex align-items-center  " role="alert" id="error-alert">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2 " viewBox="0 0 16 16" role="img" aria-label="Warning:">
                      <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                    <div >
                        <strong>Hey !</strong>
                      <%= messages.nameExist %>
                    </div>
                  </div> 
            <% } %> 

              <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name">
              </div>
              <div class="form-group">
                <label for="description">Description:</label>
                <textarea class="form-control" id="description" name="description" rows="5"
                  placeholder="Enter description"></textarea>
              </div>
              <div class="form-group">
                <label for="description">Is Listed</label>
                <select class="form-select" name="isListed" required>
                  <option value="true">Yes!</option>
                  <option value="false">No!</option>

                </select>
              </div>


              <div class="mt-4"> <button type="submit" class="btn btn-primary ">Submit</button>
                <a href="/admin/category" class="btn btn-primary">
                  <span class="text">Back</span>
                </a>
              </div>
            </form>
          </div>
        </div>
      </section>
    </div>


    <script>

      function validateCategory() {
        let name = document.getElementById('name')
        let description = document.getElementById('description')
        let lettersRegex = /^[A-Za-z ]+$/;
        if (name.value.trim() == '') {
          alert('please fillproperly remove blank names')
          return false
        } else if (lettersRegex.test(name)) {
          alert('Category name should contain only letters')
          return false
        } else if (description <= 10 || description.value.trim() === "") {
          alert('Description need more words')
          return false
        } else {
          return true
        }
      }
    </script>

