                            <label class="form-label" for="size-5"> Size:10 </label>
                            <input type="number" class="form-control quantity-input" id="quantity-5" name="quantity" placeholder="Quantity" value="<%= productData.stock[productData.size[4]] %>">
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
                            
                        </div>
