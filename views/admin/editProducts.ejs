<script>
function validateEditForm() {
    console.log('im in validation');
    let name = document.getElementById('product_title').value;
    let description = document.getElementById('description').value;
    let price = document.getElementById('price').value;
    let offerPrice = document.getElementById('offer_Price').value;
    let brand = document.getElementById('product_brand').value;
    let lettersAndNumbersRegex = /^[A-Za-z0-9 ]+$/;
    let sizeCheckboxes = document.getElementsByName('size');
    let imageInput = document.getElementById('imageInput').files.length;
    let selectedSizes = [];


    for (let i = 0; i < sizeCheckboxes.length; i++) {
        if (sizeCheckboxes[i].checked) {
            selectedSizes.push(sizeCheckboxes[i].value);
        }
    }

for (let i = 1; i <= 5; i++) { 
let sizeCheckbox = document.getElementById(`size-${i}`);
let quantityInput = document.getElementById(`quantity-${i}`);

if (sizeCheckbox.checked && quantityInput.value.trim() === '') {
alert('Quantity must be provided for all selected sizes.');
return false;
}

if (sizeCheckbox.checked && parseInt(quantityInput.value) <= 0) {
alert('Quantity must be greater than Zero.');
return false;
}
}
   
    if (!name || !description || !price || !brand || !offerPrice) {
        alert('Please fill all fields.');
        return false;

    } else if (name.trim() === "" || description.trim() === "" || price.trim() === "") {
        alert('Please fill properly, Remove blank spaces.');
        return false;

    } else if (!lettersAndNumbersRegex.test(name)) {
        alert('Product name only contain letters.');
        return false;

    } else if (description.length <= 20) {
        alert('Description should be contain alteast 20 letters');
        return false;


    } else if (Number(price) <= 0) {
        alert('Price must be a positive number');
        return false;

    } else if (Number(offerPrice ) <= 0) {
        alert('Offer Price must be a positive number');
        return false;

    } else if (price<offerPrice) {
        alert('Offer Price should be lessthan price');
        return false;         
   
    } else if (selectedSizes.length == 0) {
            alert('Please select the size of the product');
            return false;

    } else if (imageInput<4) {
        alert('Please add 4 images of the product');
        return false;

    } else if (imageInput>4) {
        alert('only allowed 4 images');
        return false;

        } else {
            return true;
        }
}

</script>
