                type: 'hidden',
                name: 'index',
                id: 'oldImageInput' + (parseInt(index) + 1),
                class: 'oldImageInput',
                value: index
            });
            $('#imageInput' + (parseInt(index) + 1)).after(oldImageInput);
        }

        reader.readAsDataURL(input.files[0]);
    }
}



