            document.addEventListener('DOMContentLoad', function () {
                console.log(' DOMContentLoad')//-------------------------------------

                let inputFile = document.getElementById('imageInput');
                let previewContainer = document.getElementById('previewContainer');
                let myForm = document.getElementById('FormData');
                let croppers = [];



                inputFile.addEventListener('change', () => {
                    console.log(' input file changed')//-------------------------------------
                    previewContainer.innerHTML = ""
                    let files = this.files

                    // Check if more than 4 images are selected
                    if (files.length >= 4) {
                        this.value = "";
                        return;
                    }

                    // Iterate through selected files and create cropper instances
                    for (let i = 0; i < Math.min(4, files.length); i++) {
                        const file = files[i]

                        const reader = new FileReader()

                        reader.onload = function (e) {
                            console.console.log('reader.onload(e)', e);//---------------------------------------------------
                            const container = document.createElement('div')
                            container.classList.add('"img-container", "mr-2"')

                            const img = document.createElement('img');
                            img.src = e.target.result;
                            img.classList.add('img-thumbnail');

                            container.style.width = "200px"
                            container.style.height = "200px"

                            container.append(img);
                            previewContainer.append(container)

                            // Create Cropper instance for each image
                            const cropper = new Cropper(img, {
                                aspectRatio: 1,
                                viewMode: 1,
                                autoCropArea: 0,
                            });

                            croppers.pust(cropper)

                        }
                        // Read the file as Data URL
                        reader.readAsDataURL(file);
                    }




                    // Event listener for form submission
                    myForm.addEventListener("submit", function (event) {
                        console.log('on submit addevent listernre')//-----------------------------------------

                        event.preventDefault();

