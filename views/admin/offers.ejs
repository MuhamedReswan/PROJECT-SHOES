<%- include('../layout/admin/adminHeader.ejs') -%>

    <%- include('../partials/adminSideNav.ejs') -%>
        <main class="main-wrap">
            <%- include('../partials/adminHeaderBody') -%>

                <section class="content-main">
                    <div class="content-header ">
                        <div>
                            <h2 class="content-title card-title g ">offers</h2>

                        </div>
                        <div>
                            <a href="/admin/offers/add-offer" class="btn btn-dark btn-sm rounded">Add offer</a>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="bg-dark text-white bg-opacity-50">
                                    <tr>
                                        <th class="text-center">ID</th>
                                        <th scope="col" class="text-center">Name</th>
                                        <th scope="col" class="text-center">Discount</th>
                                        <th scope="col" class="text-center">Expire Date</th>
                                        <th scope="col" class="text-center ">Status</th>

                                        <th scope="col" colspan="2" class="text-center ">action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(offers){%>

                                        <% offers.forEach((offer,index)=>{%>

                                            <tr class="text-center">
                                                <td class="text-center">
                                                    <%let SINO=(index+1)+((page-1)*8) %>
                                                        <%=SINO%>
                                                </td>

                                                <td class="text-center">
                                                    <%=offer.name%>
                                                </td>

                                                <td class="text-center">
                                                    <%=offer.discount%>%
                                                </td>

                                                <% let date=new Date(offer.endDate).toLocaleDateString('en-GB') %>

                                                    <td class="text-center">
                                                        <%=date%>
                                                    </td>

                                                    <td>
                                                        <button id="status-button"
                                                            class="btn text-center btn-sm btn-dark btn-disabled">
                                                            <%= offer.isListed==true ? 'Listed' : 'Unlisted' %>
                                                        </button>
                                                    </td>

                                                    <td class="d-flex justify-content-evenly">
                                                        <a href="/admin/offers/edit-offer?id=<%=offer._id%>">
                                                            <button
                                                                class="btn btn-sm rounded font-sm text-center btn-outline-dark d-flex">

                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16"
                                                                    height="16" fill="blue" class="bi bi-pencil-square"
                                                                    viewBox="0 0 16 16">
                                                                    <path
                                                                        d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                                                    <path fill-rule="evenodd"
                                                                        d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                                                </svg> <span>Edit</span>
                                                            </button>
                                                        </a>

                                                        <button class="btn btn-danger btn-sm"
                                                            onclick="changeStatus('<%=offer._id%>','<%=offer.isListed%>')">
                                                            <%=offer.isListed ? 'Unlist' : 'List' %>
                                                        </button>
                                                    </td>
                                            </tr>
                                            <% })%>
                                                <%}else{%>
                                                    <tr>
                                                        <td colspan="4" class="text-center">No Offer Found !</td>
                                                    </tr>
                                                    <%}%>
                                </tbody>

                            </table>
                        </div>
                        <!-- table-responsive //end -->
                    </div>

                    <div class="pagination-area mt-20 mb-30">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item "><a
                                        class="page-link d-flex align-items-center justify-content-center"
                                        href="/admin/offers?page=<%=previous%>"><i
                                            class="material-icons md-chevron_left"></i></a></li>
                                <li class="page-item active"><a
                                        class="page-link d-flex align-items-center justify-content-center"
                                        href="/admin/offers?page=<%=page%>">
                                        <%=page%>
                                    </a></li>
                                <li class="page-item"><a
                                        class="page-link d-flex align-items-center justify-content-center"
                                        href="/admin/offers?page=<%=next%>"><i
                                            class="material-icons md-chevron_right"></i></a></li>
                            </ul>
                        </nav>
                    </div>
                </section>
                <!-- content-main end// -->
                <footer class="main-footer font-xs">
                    <div class="row pb-30 pt-15">
                        <div class="col-sm-6">
                            <script>
                                document.write(new Date().getFullYear());
                            </script>
                            &copy; Nest - HTML Ecommerce Template .
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-end">All rights reserved</div>
                        </div>
                    </div>
                </footer>
        </main>

        <script src="assets/js/custom/offers.js" defer></script>

        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="assets/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="assets/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="assets/js/vendors/select2.min.js"></script>
        <script src="assets/js/vendors/perfect-scrollbar.js"></script>
        <script src="assets/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="assets/js/main.js" type="text/javascript"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>

        <%- include('../layout/admin/adminFooter.ejs') -%>