        <div id="page-content" >
          <!-- Page Title -->
          <div class="page section-header text-center">
              <div class="page-title">
                  <div class="wrapper"><h1 class="page-width">Login</h1></div>
              </div>
          </div>
          <!-- End Page Title -->
         
        

          <div class="container">
            <div class="row login-form" style="display: flex; align-items: center;">
                <div class="col-12 col-sm-12 col-md-6 col-lg-6 main-col offset-md-3 pt-5 d-flex justify-content-center">
                    <div class="mb-4 d-flex justify-content-center" style="background-color: #f8f9fa; border-radius: 15px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.7);">
                        <form method="post" action="/login"  id="CustomerLoginForm" accept-charset="UTF-8" class="contact-form p-5">
                            <div class="text-center"> 
                               
                              <div class="text text-align text-danger mb-3" id="emailErrorMessage" style="display: none;">
                                <strong>Please enter email!</strong>
                            </div>
                            
                            <div class="text text-align text-danger mb-3" id="passwordErrorMessage" style="display: none;">
                                <strong>Please enter password!</strong>
                            </div>
                            
                                <%if(messages.passwordError) {%>
                                    <div class="text text-align text-danger mb-3">
                                        <strong><span><%= messages.passwordError %>..!</span></strong>
                                    </div>
                                <%}%>
            
                                <%if(messages.emailError) {%>
                                    <div class="text text-align text-danger  mb-3">
                                        <strong><span><%= messages.emailError %>..!</span></strong>
                                    </div>
                                <%}%>
            
                                <%if(messages.blocked) {%>
                                    <div class="text text-align text-danger mb-3">
                                        <strong><span><%= messages.blocked %>..!</span></strong>
                                    </div>
                                <%}%>
                                <%if(messages.success) {%>
                                    <div class="text text-align text-success mb-3">
                                        <strong><span><%= messages.success %>..!</span></strong>
                                    </div>
                                <%}%>
                                <%if(messages.error) {%>
                                    <div class="text text-align text-success mb-3">
                                        <strong><span><%= messages.error %>..!</span></strong>
                                    </div>
                                <%}%>
                                <div class="text text-align text-danger mb-3" id="emailErrorMessage" style="display: none;">
                                    <strong>Please enter email!</strong>
                                </div>
                            </div> 
                            <div class="row">
                                <div class="col-12 col-sm-12 col-md-12 col-lg-12 mx-auto">
                                    <div class="form-group">
                                        <input type="email" name="Email" placeholder="Enter Your Email" id="CustomerEmail" class="bg-white" autocorrect="off" autocapitalize="off" autofocus="">
                                    </div>
                                </div>
                                <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                                    <div class="form-group">
                                        <input type="password" value="" name="Password" placeholder="Enter Your Password" id="CustomerPassword" class="bg-white">                        	
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
                                    <input type="submit" class="btn mb-3" value="Sign In" onclick="validateForm()">
                                    <p class="mb-4">
                                        <a href="/forgot-password" id="RecoverPassword btn" >Forgot your password?</a> 
                                        <a href="/signup" id="customer_register_link">Create account</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
      </div>
      
